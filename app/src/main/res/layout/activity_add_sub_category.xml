<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context="com.example.SubCategory.AddSubCategoryActivity">

    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="#A681AF"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Sub-Category Name"
        android:textColor="#FFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etvSubCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="#A681AF"
        android:hint="Add Sub-Category Name"
        android:imeOptions="actionDone"
        android:inputType="textAutoComplete"
        android:minHeight="48dp"
        android:minLines="1"
        android:padding="@dimen/_10sdp"
        android:textColorHint="#FFF" />

    <Button
        android:id="@+id/btnSubAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD" />

</LinearLayout>